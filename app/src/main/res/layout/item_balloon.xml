<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/white_background">

    <ImageView
        android:id="@+id/like_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/green_border_hart"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/like_cnt"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/like_icon"/>
    <TextView
        android:id="@+id/ecostore_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더 커먼"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/ecostore_desc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="더 커먼은 지구와 우리의 건강을 생각하는 공간으로서, 채식 및 비건 메뉴를 제공합니다."
        android:textSize="14dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ecostore_name"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>