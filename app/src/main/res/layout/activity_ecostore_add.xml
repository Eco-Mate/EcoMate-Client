<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/back_arrow"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="에코 매장 등록"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ecostore_name_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">
        <TextView
            android:id="@+id/ecostore_name_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매장 이름"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <EditText
            android:id="@+id/ecostore_name_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="매장 이름 입력"
            android:textSize="15dp"
            android:inputType="textLongMessage"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@id/ecostore_name_mark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ecostore_location_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ecostore_name_box">
        <TextView
            android:id="@+id/ecostore_latitude_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매장 위도"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <EditText
            android:id="@+id/ecostore_latitude_et"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="매장 위도값"
            android:textSize="12dp"
            android:inputType="number|textLongMessage"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@id/ecostore_latitude_mark"
            app:layout_constraintEnd_toStartOf="@id/ecostore_longitude_mark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/ecostore_longitude_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매장 경도"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/ecostore_latitude_et"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <EditText
            android:id="@+id/ecostore_longitude_et"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="매장 경도값"
            android:textSize="12dp"
            android:inputType="number|textLongMessage"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@id/ecostore_longitude_mark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ecostore_address_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ecostore_location_box">
        <TextView
            android:id="@+id/ecostore_address_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <EditText
            android:id="@+id/ecostore_address_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="주소 입력"
            android:textSize="15dp"
            android:inputType="textLongMessage"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@id/ecostore_address_mark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ecostore_keyword_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ecostore_address_box">
        <TextView
            android:id="@+id/ecostore_keyword_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="키워드"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/keyword_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/underbar_background"
            android:layout_marginStart="30dp"
            android:padding="10dp"
            android:clickable="true"
            app:layout_constraintStart_toEndOf="@id/ecostore_keyword_mark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/keyword_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택해주세요"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <Button
                android:id="@+id/keyword_select_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/down_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageButton
        android:id="@+id/ecostore_image_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/post_image_add"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ecostore_keyword_box"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ecostore_desc_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ecostore_image_btn">
        <TextView
            android:id="@+id/ecostore_desc_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매장 소개글"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <EditText
            android:id="@+id/ecostore_desc_et"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:hint="내용 입력"
            android:textSize="15dp"
            android:gravity="start"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/border_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ecostore_desc_mark"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/ecostore_add_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="등록하기"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/primary_background"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>