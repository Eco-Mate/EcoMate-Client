<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/echoshop_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/echoshop_ex_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/echoshop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비건 베이커리"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/echoshop_image"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/echoshop_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울시 도봉구 836m"
        android:textSize="12dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/echoshop_image"
        app:layout_constraintTop_toBottomOf="@id/echoshop_name" />
    <Button
        android:id="@+id/post_detail"
        android:layout_width="8dp"
        android:layout_height="16dp"
        android:background="@drawable/right_arrow"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>