<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/ecostore_img"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/standard_store_icon"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/ecostore_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더 커먼"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/ecostore_img"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/ecostore_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대구 중구 국채보상로 741"
        android:textSize="14dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/ecostore_img"
        app:layout_constraintTop_toBottomOf="@id/ecostore_name"/>
    <Button
        android:id="@+id/store_more"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/black_more_1"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>